{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BrainLL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#regions"
    },
    {
      "include": "#populations"
    },
    {
      "include": "#connections"
    },
    {
      "include": "#parameters"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.brainll",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.brainll",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "regions": {
      "patterns": [
        {
          "name": "entity.name.type.region.brainll",
          "match": "\\b(region)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.region.brainll"
            },
            "2": {
              "name": "entity.name.type.region.brainll"
            }
          }
        }
      ]
    },
    "populations": {
      "patterns": [
        {
          "name": "entity.name.type.population.brainll",
          "match": "\\b(population)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.population.brainll"
            },
            "2": {
              "name": "entity.name.type.population.brainll"
            }
          }
        },
        {
          "name": "support.type.neuron.brainll",
          "match": "\\b(neuron_type)\\s*:\\s*(LIF|Izhikevich|HodgkinHuxley|LSTM|Attention|Adaptive|Transformer)\\b",
          "captures": {
            "1": {
              "name": "variable.parameter.brainll"
            },
            "2": {
              "name": "support.type.neuron.brainll"
            }
          }
        }
      ]
    },
    "connections": {
      "patterns": [
        {
          "name": "entity.name.type.connection.brainll",
          "match": "\\b(connection)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.connection.brainll"
            },
            "2": {
              "name": "entity.name.type.connection.brainll"
            }
          }
        },
        {
          "name": "variable.other.reference.brainll",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\.([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "entity.name.type.region.brainll"
            },
            "2": {
              "name": "entity.name.type.population.brainll"
            }
          }
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "name": "variable.parameter.brainll",
          "match": "\\b(size|threshold|decay|learning_rate|weight|delay|probability|from|to|type|plasticity|neuron_type|activation|dimensions|tau_m|tau_s|v_rest|v_reset|v_thresh|refractory_period|a|b|c|d|g_na|g_k|g_l|e_na|e_k|e_l|c_m|input_size|hidden_size|output_size|num_heads|dropout|ff_dim|num_layers|adaptation_rate|threshold_adaptation|spike_adaptation)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.brainll",
          "match": "\\b(region|population|connection|plasticity|learning|simulation|config|import|export|include)\\b"
        },
        {
          "name": "keyword.operator.brainll",
          "match": "\\b(STDP|Hebbian|AntiHebbian|BCM|Oja|Supervised|Reinforcement|Unsupervised)\\b"
        },
        {
          "name": "constant.language.brainll",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.brainll",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.brainll",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.brainll",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.brainll",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.brainll",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.brainll",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.brainll",
          "match": "[:=]"
        },
        {
          "name": "keyword.operator.arithmetic.brainll",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.brainll",
          "match": "[<>=!]+"
        },
        {
          "name": "keyword.operator.logical.brainll",
          "match": "(&&|\\|\\||!)"
        }
      ]
    }
  },
  "scopeName": "source.brainll"
}